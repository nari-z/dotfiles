
"---
" settings
"---
" character code.
set fenc=utf-8
" don't create backup file.
set nobackup
" don't create swap file.
set noswapfile
" automatically reload edited file.
set autoread
" enable switching buffer while editing.
set hidden
" display inputting command.
set showcmd
" allow delete.
set backspace=indent,eol,start

"---
" visualize
"---
" display row number.
set number
" highlight current row.
" set cursorline
" allow cursor movement to EOL.
set virtualedit=onemore
" indent setting.
set smartindent
" show braces combinations.
set showmatch
" always display status line.
set laststatus=2
" command completion.
set wildmode=list:longest
" allow movement by display line.
nnoremap j gj
nnoremap k gk

"---
" tab
"---
" visualize tabs(▸-)
set list listchars=tab:\▸\-
" tab is two half-width space
set expandtab
set tabstop=2
set shiftwidth=2

"---
" search
"---
" don't care about case.
set ignorecase
" care about upper case.
set smartcase
" incremental search.
set incsearch
" repeat scan.
set wrapscan
" highlight search word.
set hlsearch
" unhighlight shortcut.
nmap <Esc><Esc> :nohlsearch<CR><Esc>
